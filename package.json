{
  "name": "random-selector-reference",
  "productName": "random-selector-reference",
  "version": "1.0.0",
  "description": "Random file selector",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder build --dir",
    "make": "electron-builder build",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Panüçû"
  },
  "license": "MIT",
  "devDependencies": {
    "electron-builder": "^24.0.0",
    "electron": "39.0.0",
    "vite": "^5.4.21"
  },
  "dependencies": {},
  "build": {
    "appId": "com.example.randomselector",
    "productName": "RandomSelector",
    "icon": "assets/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "src/**/*",
      ".vite/**/*" 
    ],
    "mac": {
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Graphics",
      "synopsis": "Commission manager for artists",
      "description": "A simple desktop app to manage and organize art commissions locally and privately."
    },
    "asar": true
  }
}
